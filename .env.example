# Variables de entorno para desarrollo local
# Copiar este archivo a .env y configurar los valores

# ============================================
# VITE - Frontend
# ============================================
VITE_SUPABASE_URL=https://ghhzzjdeaofjvlbjpdst.supabase.co
VITE_SUPABASE_ANON_KEY=tu-anon-key-de-supabase-remoto-aqui

# ============================================
# PostgreSQL
# ============================================
POSTGRES_PASSWORD=tu-password-seguro-aqui
POSTGRES_DB=tetraedro
POSTGRES_USER=postgres

# ============================================
# Supabase JWT
# ============================================
# Generar con: openssl rand -base64 32
JWT_SECRET=tu-jwt-secret-de-minimo-32-caracteres-aqui
ANON_KEY=tu-anon-key-de-supabase-remoto-aqui
SERVICE_ROLE_KEY=tu-service-role-key-de-supabase-remoto-aqui

# ============================================
# API URLs
# ============================================
API_EXTERNAL_URL=https://ghhzzjdeaofjvlbjpdst.supabase.co
SUPABASE_PUBLIC_URL=https://ghhzzjdeaofjvlbjpdst.supabase.co

# ============================================
# SMTP (Email)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion
SMTP_FROM=noreply@tetraedro.com

# ============================================
# Storage
# ============================================
STORAGE_BACKEND=file
FILE_SIZE_LIMIT=52428800
FILE_STORAGE_BACKEND_PATH=/var/lib/storage

# ============================================
# Grafana
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Backups
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ============================================
# Docker / CI-CD
# ============================================
FRONTEND_PORT=3000
DOCKER_REGISTRY=ghcr.io
GITHUB_REPOSITORY=gerenciaauditorias/tetraedro
IMAGE_TAG=latest

# ============================================
# Desarrollo
# ============================================
NODE_ENV=development
VITE_APP_NAME=TETRAEDRO v3.0
VITE_APP_VERSION=3.0.0
